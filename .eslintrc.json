{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "ecmaFeatures": {
        "classes": true
    },
    "extends": "airbnb",
    "rules": {
        "no-param-reassign":
        [
            "error",
            {
                "props": false
            }
        ],
        "max-len":
        [
            "error",
            {
                "code": 100,
                "ignoreComments": true
            }
        ],
        "linebreak-style": "off",
        "import/no-extraneous-dependencies": "off",
        "import/no-unresolved": "off",
        "import/prefer-default-export": "off",
        "no-underscore-dangle": "off",
        "no-useless-escape": "off",
        "global-require": "off"
    },
    "globals": {
        "angular": true,
        "define": true
    }
}
